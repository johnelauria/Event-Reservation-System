<strong>TITLE:</strong> 
<%=@sasd.title%>
		<% if @sasd.user_id == current_user.id %>
		
		<% else %>

		<% if Userevent.where("event_id =? AND user_id =?",@sasd.id, current_user.id).exists?%>
		
		<%= form_tag("print", :method =>"post",:style=>"margin-top:-10px;float:right;",:target => '_blank') do %>
